<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.connection.url" > jdbc:mysql://localhost:3306/modulo3_spring_mvc?zeroDateTimeBehavior=convertToNull </property>
        <property name="hibernate.connection.username"> root </property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password"> root </property>      
        <property name="show_sql">true</property> 
        <property name="format_sql">true</property>         
        <mapping class="br.com.entidades.Pessoa"/>
        <mapping class="br.com.entidades.Sexo"/>
        <mapping class="br.com.entidades.User"/>
        <mapping class="br.com.entidades.Endereco"/>
        <mapping class="br.com.entidades.Cidade"/>
        <mapping class="br.com.entidades.Estado"/>
    </session-factory>
</hibernate-configuration>
