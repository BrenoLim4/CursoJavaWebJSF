<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.connection.url" > jdbc:mysql://localhost:3308/mysql?zeroDateTimeBehavior=convertToNull </property>
        <property name="hibernate.connection.username"> root </property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password"> root </property>      
        <property name="show_sql"> true </property>          
        <property name="format_sql"> true </property>     
        <!--<property name="javax.persistence.schema-generation.database.action">create</property>-->     
        <mapping class="br.com.entidades.Pessoa"/>
        <mapping class="br.com.entidades.Sexo"/>
        <mapping class="br.com.entidades.User"/>
    </session-factory>
</hibernate-configuration>
